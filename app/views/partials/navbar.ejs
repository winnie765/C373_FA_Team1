<nav class="nav">
  <a class="brand" href="/">
    <img src="/public/images/ticketnft-logo.svg" alt="TicketNFT" onerror="this.style.display='none'">
    <span>TicketNFT</span>
  </a>

  <div class="nav-links">
    <a class="nav-link" href="/events">Events</a>
    <a class="nav-link" href="/mytickets">My Tickets</a>
    <a class="nav-link" href="/rewards">Rewards</a>
    <a class="nav-link" href="/transactions">History</a>
    <a class="nav-link" href="/about">About</a>
  </div>

  <div class="nav-actions">
    <% if (!loggedIn) { %>
      <a class="btn btn-signin" href="/login">Log In</a>
      <a class="btn btn-primary" href="/signup">Sign Up</a>
    <% } else { %>
      <% if (authUserRole === "seller") { %>
        <a class="btn btn-dark" href="/seller">Seller Portal</a>
      <% } %>
      <button id="walletBtn" class="btn btn-signin" type="button">Connect Wallet</button>
    <% } %>
    <a id="profileBtn" class="btn btn-ghost btn-profile" href="/profile" aria-label="Profile" style="display:none">
      <svg class="profile-icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M12 12.6c2.54 0 4.6-2.06 4.6-4.6S14.54 3.4 12 3.4 7.4 5.46 7.4 8s2.06 4.6 4.6 4.6Zm0 1.8c-3.5 0-8.2 1.76-8.2 5.3v.9h16.4v-.9c0-3.54-4.7-5.3-8.2-5.3Z"/>
      </svg>
    </a>
    <form id="logoutForm" class="logout-form" action="/logout" method="post" style="<%= loggedIn ? 'display:block' : 'display:none' %>">
      <button class="btn btn-ghost btn-logout" type="submit">Log Out</button>
    </form>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/ethers@6.13.4/dist/ethers.umd.min.js"></script>
<script src="/blockchain/web3/metamask.js"></script>
<script src="/blockchain/web3/config.js"></script>
<script src="/blockchain/web3/ticketContract.js"></script>
<script src="/blockchain/web3/rewardContract.js"></script>
<script>
  window.TicketNFT_LoggedIn = <%= loggedIn ? "true" : "false" %>;
  window.TicketNFT_UserRole = "<%= loggedIn ? (authUserRole || "") : "" %>";
</script>
<script src="/public/js/ui.js"></script>
